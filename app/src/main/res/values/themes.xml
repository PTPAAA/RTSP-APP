<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.RTSPCamera" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- OLED Optimization -->
        <item name="android:windowBackground">@color/oled_black</item>
        <item name="android:navigationBarColor">@color/oled_black</item>
        <item name="android:statusBarColor">@color/oled_black</item>
        
        <!-- Component Styles -->
        <item name="materialCardViewStyle">@style/Widget.RTSPCamera.Card</item>
    </style>
    
    <style name="Widget.RTSPCamera.Card" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/oled_black</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>
